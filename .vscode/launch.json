{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(mpirun) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/make",
            "args": [
                "rungdb"
            ],
            "preLaunchTask": "mpicc build active file",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty print for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",
            "externalConsole": false,
        }
    ]
}